@model QuickHelpers.DbTest.Car

<h2>Add car</h2>

<form asp-action="AddCar" asp-controller="Car" asp-anti-forgery="true">
    <div>
        <div class="form-group">
            <label asp-for="Id">Введите Id</label>
            <input type="text" asp-for="Id" class="form-control"/>
            <span asp-validation-for="Id"></span>
        </div>
        <div class="form-group">
            <label asp-for="Model">Введите Model</label>
            <input type="text" asp-for="Model" class="form-control"/>
            <span asp-validation-for="Model"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price">Введите Price</label>
            <input type="text" asp-for="Price" class="form-control"/>
            <span asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить" class="form-control" style="width:100%"/>
        </div>
    </div>
</form>